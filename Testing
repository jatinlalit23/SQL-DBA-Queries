SELECT  
    s.login_name,  
    s.host_name,  
    c.client_net_address AS login_source,  
    s.program_name,  
    s.login_time,  
    LOGINPROPERTY(s.login_name, 'LastLogonTime') AS last_login_time  
FROM sys.dm_exec_sessions s  
LEFT JOIN sys.dm_exec_connections c  
    ON s.session_id = c.session_id  
WHERE s.is_user_process = 1  
ORDER BY s.login_time DESC;
